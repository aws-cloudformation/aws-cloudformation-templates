{
    "Transform": "AWS::Serverless-2016-10-31",
    "Resources": {
        "MacroFunction": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "Runtime": "python3.11",
                "CodeUri": "lambda",
                "Handler": "explode.handler"
            }
        },
        "Macro": {
            "Type": "AWS::CloudFormation::Macro",
            "Properties": {
                "Name": "Explode",
                "FunctionName": {
                    "Fn::GetAtt": [
                        "MacroFunction",
                        "Arn"
                    ]
                }
            }
        }
    }
}
